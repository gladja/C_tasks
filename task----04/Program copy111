using System;

namespace Hello
{
    class Program
    {

        static int[] InitByKeyBoard(string str)
        {
            string[] date = str.Trim().Split();
            int[] arr = new int[date.Length];
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = Int32.Parse(date[i]);
            }
            return arr;
        }

        static byte CountOfDifferent(int[] arr)
        {
            byte count = 1;
            for (int i = 0; i < arr.Length - 1; i++)
            {
                if (arr[i] != arr[i + 1])
                    count++;
            }
            return count;
        }


        static void Main(string[] args)

        {
            int n = Convert.ToInt16(Console.ReadLine());
            int[] myArr = InitByKeyBoard(Console.ReadLine());
            Console.WriteLine($"{CountOfDifferent(myArr)}");
        }
    }
}











using System;

namespace task_01
{
    class Program
    {
        static int[] InputNumber(int n, string str)
        {
            string[] data = str.Trim().Split();
            int[] array = new int[n];

            for (int i = 0; i < n; i++)
            {
                array[i] = int.Parse(data[i]);
            }
            return array;
        }

        static byte CountOfDifferent(int[] newArr)
        {
            byte count = 0;
            for (int i = 0; i < newArr.Length - 1; i++)
            {
                if (newArr[i] != newArr[i + 1])
                    count++;
            }
            return count;
        }

        static void Main()
        {
            int n = Convert.ToInt32(Console.ReadLine());
            string num = Console.ReadLine();

            int[] newArr = InputNumber(n, num);
            Console.WriteLine(CountOfDifferent(newArr));


        }
    }
}



