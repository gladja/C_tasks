using System;

namespace task_01
{
    class Program
    {
        static void Main()
        {
            int num = num = Convert.ToInt32(Console.ReadLine());
            int count = 0;

            while (num > 0 || num < 0)
            {
                num = Convert.ToInt32(Console.ReadLine());
                count += 1;
            }
            Console.WriteLine(count);

        }
    }
}




