using System;

namespace task_01
{
    class Program
    {
        static void Main()
        {
            int num = Convert.ToInt32(Console.ReadLine());
            int count = 0;
            int sum = num;

            while (num != 0)
            {
                num = Convert.ToInt32(Console.ReadLine());
                if (sum < num)
                {
                    ++count;
                }
                sum = num;
            }
            Console.WriteLine(count);
        }
    }
}




