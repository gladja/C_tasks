using System;

namespace task_01
{
    class Program
    {
        static void Main()
        {
            int num = Convert.ToInt32(Console.ReadLine());
            int count = 0;
            double sum = 2;

            while (num > sum)
            {
                count += 1;
                sum = Math.Pow(2, count);
            }
            Console.WriteLine(count);

        }
    }
}




