using System;

public class Test
{

    static void Result(string data)
    {

        for (int i = 0; i < data.Length; i++)
        {
            if (data[i] == ' ')
            {
                Console.WriteLine(i + 1);
                break;
            }
        }
    }

    static void Main(string[] args)

    {
        string data = Console.ReadLine();

        Result(data);
    }

}

// or   Console.WriteLine(data.IndexOf(' ')+1);